{
  "openapi": "3.0.2",
  "info": {
    "description": "Puppeteer Boilerplate API.",
    "version": "1.0.0",
    "title": "A simple example API"
  },
  "paths": {
    "/": {
      "get": {
        "tags": [
          "root"
        ],
        "summary": "Get API Version Information",
        "description": "Returns a list of the available API versions",
        "operationId": "versions",
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArrayOfVersions"
                }
              }
            }
          }
        }
      }
    },
    "/ping": {
      "get": {
        "tags": [
          "root"
        ],
        "summary": "Get Server Information",
        "description": "Returns information about the server",
        "operationId": "ping",
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServerInfo"
                }
              }
            }
          }
        }
      }
    },
    "/things": {
      "get": {
        "tags": [
          "demo"
        ],
        "summary": "List Things",
        "description": "Returns a list of things",
        "operationId": "listThings",
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArrayOfVersions"
                }
              }
            }
          }
        },
        "security": [
          {
            "slack": [
              "identity.basic",
              "identity.email"
            ]
          }
        ]
      }
    }
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "components": {
    "schemas": {
      "APIVersion": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        }
      },
      "ServerInfo": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "uptime": {
            "type": "number"
          }
        }
      },
      "ArrayOfVersions": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/APIVersion"
        }
      }
    }
  }
}
